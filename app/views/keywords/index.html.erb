<p id="notice"><%= notice %></p>

<h1>Keywords</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Chapters</th>
      <th>Events</th>
      <th>Name</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.chapters.uniq.count %></td>
        <td><%= keyword.events.uniq.count %></td>
        <td><%= keyword.name %></td>
        <td><%= keyword.desc %></td>
        <td><%= link_to 'Show', keyword %></td>
        <td><%= link_to 'Edit', edit_keyword_path(keyword) %></td>
        <td><%= link_to 'Destroy', keyword, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Keyword', new_keyword_path %>
